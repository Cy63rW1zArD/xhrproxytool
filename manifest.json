{
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icons/48x48.png",
    "default_title": "XHR Proxy Tool"
  },
  "content_scripts": [
    {
      "js": [
        "js/xhrproxy.page.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "XHR Proxy Tool",
  "manifest_version": 2,
  "name": "XHR Proxy Tool",
  "short_name": "XHR Proxy",
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "version": "1.0"
}
